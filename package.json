{
	"name": "awaitless",
	"version": "1.0.2",
	"description": "A promise utility module for projects that have access to Promises, but do not have access to async-await.",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dlee-onfleet/awaitless.git"
  },
	"scripts": {
    "build": "tsc --build",
		"format": "prettier ./**/*.ts -l",
		"format:fix": "npm run format -- --write",
		"lint": "tslint --outputAbsolutePaths --project .",
		"lint:fix": "npm run lint -- --fix",
		"test": "jest",
		"test:coverage": "npm test -- --coverage"
	},
	"author": "leedavidcs",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.5.5",
		"@babel/preset-env": "^7.5.5",
		"@babel/preset-typescript": "^7.3.3",
		"@geut/chan": "^2.1.1",
		"@types/jest": "^24.0.16",
		"babel-jest": "^24.8.0",
		"jest": "^24.8.0",
		"prettier": "^1.18.2",
		"tslint": "^5.18.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.5.3"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.ts"
		],
		"coverageDirectory": "./coverage",
		"coverageReporters": [
			"cobertura",
			"json",
			"lcov",
			"text"
		],
		"coverageThreshold": {
			"global": {
				"lines": 80,
				"statements": 80
			}
		},
		"moduleFileExtensions": [
			"json",
			"js",
			"ts"
		],
		"testEnvironment": "node",
		"testMatch": [
			"<rootDir>/tests/**/*test.ts",
			"<rootDir>/tests/**/*test/index.ts"
		],
		"testPathIgnorePatterns": [
			"/node_modules"
		]
	}
}
