{
	"name": "awaitless",
	"version": "1.4.0",
	"description": "A promise utility module for projects that have access to Promises, but do not have access to async-await.",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/leedavidcs/awaitless.git"
	},
	"scripts": {
		"build": "tsc --build",
		"format": "prettier ./**/*.{json,ts} -l",
		"format:fix": "npm run format -- --write",
		"lint": "tslint --outputAbsolutePaths --project .",
		"lint:fix": "npm run lint -- --fix",
		"test": "jest",
		"test:coverage": "npm test -- --coverage",
		"test:sonar": "ts-node scripts/generate-sonar && npm test -- --coverage --testResultsProcessor=jest-sonar-reporter"
	},
	"author": "leedavidcs",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.5.5",
		"@babel/preset-env": "^7.5.5",
		"@babel/preset-typescript": "^7.3.3",
		"@geut/chan": "^2.1.1",
		"@types/fs-extra": "^8.0.0",
		"@types/jest": "^24.0.17",
		"@types/nunjucks": "^3.1.2",
		"@types/read-pkg": "^5.1.0",
		"babel-jest": "^24.8.0",
		"fs-extra": "^8.1.0",
		"jest": "^24.8.0",
		"jest-sonar-reporter": "^2.0.0",
		"nunjucks": "^3.2.0",
		"prettier": "^1.18.2",
		"read-pkg": "^5.2.0",
		"ts-node": "^8.3.0",
		"tslint": "^5.18.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.5.3"
	},
	"jest": {
		"coverageDirectory": "./coverage",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!build/**/*",
			"!config/**/*",
			"!coverage/**/*",
			"!logs/**/*",
			"!dist/**/*",
			"!scripts/**/*",
			"!test-reports/**/*",
			"!**/*.d.ts"
		],
		"coverageReporters": [
			"cobertura",
			"json",
			"lcov",
			"text"
		],
		"coverageThreshold": {
			"global": {
				"lines": 80,
				"statements": 80
			}
		},
		"resolver": "jest-pnp-resolver",
		"testMatch": [
			"<rootDir>/tests/**/*test.ts",
			"<rootDir>/tests/**/*test/index.ts"
		],
		"testEnvironment": "jsdom",
		"testURL": "http://localhost",
		"transformIgnorePatterns": [
			"[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
		],
		"moduleFileExtensions": [
			"web.js",
			"js",
			"web.ts",
			"ts",
			"web.tsx",
			"tsx",
			"json",
			"web.jsx",
			"jsx",
			"node"
		]
	},
	"jestSonar": {
		"reportPath": "test-reports",
		"reportFile": "sonar.xml",
		"indent": 4
	}
}
